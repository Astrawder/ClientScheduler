      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="Add Customer" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label text="Customer ID:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <TextField fx:id="idTextField" editable="false" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <Label text="Name:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
      <TextField fx:id="nameTextField" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Label text="Address:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
      <TextField fx:id="addressTextField" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Label text="Postal Code:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
      <TextField fx:id="postalTextField" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Label text="Phone Number:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
      <TextField fx:id="phoneTextField" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="2" GridPane.rowIndex="6" />
      <Label text="Country:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
      <ComboBox fx:id="countryComboBox" prefHeight="25.0" prefWidth="130.0" GridPane.columnIndex="2" GridPane.rowIndex="7" />
      <Label text="First-level Division:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
      <ComboBox fx:id="fldComboBox" prefHeight="25.0" prefWidth="130.0" GridPane.columnIndex="2" GridPane.rowIndex="8" />
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="9" />
      <Button mnemonicParsing="false" onAction="#onClearButtonClick" text="Clear" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="9" />
      <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClick" text="Exit" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="9" />
   </children>
